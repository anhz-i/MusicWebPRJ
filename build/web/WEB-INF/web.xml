<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--    <welcome-file-list>
        
        <welcome-file>Views/Guest/Home.jsp</welcome-file>
    </welcome-file-list>-->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/Views/Admin/*</url-pattern>
        <url-pattern>/album/*</url-pattern>
        <url-pattern>/songs/*</url-pattern>
        <url-pattern>/singers/*</url-pattern>
        <url-pattern>/users/ViewUser</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>filter.UserFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/Views/User/*</url-pattern>
        <url-pattern>/users/MyProfile</url-pattern>
        <url-pattern>/users/ChangePass</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>AllAlbums</servlet-name>
        <servlet-class>controller.AllAlbums</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Songs_Album</servlet-name>
        <servlet-class>controller.Songs_Album</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadAuthorName</servlet-name>
        <servlet-class>controller.loadAuthorName</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Singer_Song</servlet-name>
        <servlet-class>controller.Singer_Song</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Regist</servlet-name>
        <servlet-class>controller.Regist</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllAlbums</servlet-name>
        <url-pattern>/AllAlbums</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Songs_Album</servlet-name>
        <url-pattern>/Songs_Album</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadAuthorName</servlet-name>
        <url-pattern>/loadAuthorName</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Singer_Song</servlet-name>
        <url-pattern>/Singer_Song</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Regist</servlet-name>
        <url-pattern>/Regist</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
